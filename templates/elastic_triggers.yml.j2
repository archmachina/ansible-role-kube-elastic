---
apiVersion: v1
data:
  elastic.key: {{ elastic_key_data['content'] }}
  elastic.crt: {{ elastic_cert_data['content'] }}
  ca.crt: {{ elastic_ca_data['content'] }}
kind: Secret
metadata:
  name: elastic-cert
  namespace: {{ elastic_namespace }}
  labels:
    app: elastic-app
type: Opaque
---
apiVersion: v1
data:
  pass: {{ elastic_pass_fileadmin | b64encode }}
kind: Secret
metadata:
  name: elastic-pass-fileadmin
  namespace: {{ elastic_namespace }}
  labels:
    app: elastic-app
type: Opaque
---
apiVersion: v1
data:
  pass: {{ elastic_pass_filekibana | b64encode }}
kind: Secret
metadata:
  name: elastic-pass-filekibana
  namespace: {{ elastic_namespace }}
  labels:
    app: elastic-app
type: Opaque
---
apiVersion: v1
data:
  pass: {{ elastic_pass_filewriter | b64encode }}
kind: Secret
metadata:
  name: elastic-pass-filewriter
  namespace: {{ elastic_namespace }}
  labels:
    app: elastic-app
type: Opaque
